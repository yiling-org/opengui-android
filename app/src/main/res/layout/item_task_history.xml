<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#2A2A3E"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="4dp">

            <!-- 状态指示器 -->
            <View
                android:id="@+id/statusIndicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/status_dot_green"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/taskDescription" />

            <!-- 任务描述 -->
            <TextView
                android:id="@+id/taskDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/statusText"
                app:layout_constraintStart_toEndOf="@id/statusIndicator"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="打开微信并发送消息给张三" />

            <!-- 删除按钮（顶部小图标） -->
            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="删除任务"
                android:padding="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_delete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#60FFFFFF" />

            <!-- 状态文本 -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textColor="@color/success"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/deleteButton"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="已完成" />

            <!-- 时间信息（合并时间和耗时） -->
            <TextView
                android:id="@+id/timeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/statusIndicator"
                app:layout_constraintTop_toBottomOf="@id/taskDescription"
                tools:text="2025-12-22 14:30:25 | 耗时: 5.2秒" />

            <!-- 结果展示区域容器 -->
            <LinearLayout
                android:id="@+id/resultContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/glass_card"
                android:orientation="vertical"
                android:padding="12dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/statusIndicator"
                app:layout_constraintTop_toBottomOf="@id/timeText"
                tools:visibility="visible">

                <!-- 结果文本内容 -->
                <TextView
                    android:id="@+id/resultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="3"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    tools:text="好的，已经帮你在12306上查询到今天北京到上海的机票信息，最低价格410元，多个航班价格为2150元起..." />

                <!-- 展开/收起结果按钮 -->
                <TextView
                    android:id="@+id/expandResultButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp"
                    android:text="展开全文"
                    android:textColor="@color/accent_indigo"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 步骤展示区域 -->
        <LinearLayout
            android:id="@+id/stepsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:visibility="gone"
            tools:visibility="visible">

            <!-- 分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                android:background="#3A3A4E" />

            <!-- 步骤标题栏 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="执行步骤"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- 步骤进度 -->
                <TextView
                    android:id="@+id/stepsProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/accent_indigo"
                    android:textSize="12sp"
                    tools:text="3/5 完成" />
            </LinearLayout>

            <!-- 步骤列表容器（动态添加步骤项） -->
            <LinearLayout
                android:id="@+id/stepsListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

        <!-- 底部操作区 -->
        <LinearLayout
            android:id="@+id/bottomActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="36dp"
            android:paddingEnd="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="12dp"
            android:visibility="gone"
            tools:visibility="visible">

            <!-- 回放按钮 -->
            <TextView
                android:id="@+id/replayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableStart="@drawable/ic_replay_small"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:paddingEnd="8dp"
                android:paddingVertical="4dp"
                android:text="重新执行"
                android:textColor="@color/accent_indigo"
                android:textSize="12sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- 弹性空间 -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- 展开/收起步骤按钮 -->
            <LinearLayout
                android:id="@+id/expandCollapseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/expandCollapseText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看步骤详情"
                    android:textColor="@color/accent_indigo"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/expandCollapseIcon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_expand_more"
                    app:tint="@color/accent_indigo" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
