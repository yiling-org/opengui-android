<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/card_background"
    app:strokeColor="@color/card_border"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 类型图标 -->
        <ImageView
            android:id="@+id/ivTypeIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_alarm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/accent_purple" />

        <!-- 任务内容 -->
        <TextView
            android:id="@+id/tvTaskContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="获取分析下最新AI资讯"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@id/switchToggle"
            app:layout_constraintStart_toEndOf="@id/ivTypeIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 开关 -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:thumbTint="@color/switch_thumb_color"
            app:trackTint="@color/switch_track_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 状态标签 -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已暂停"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:background="@drawable/bg_status_tag"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 时间信息 -->
        <TextView
            android:id="@+id/tvTimeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="今天 15:00"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/ivTypeIcon"
            app:layout_constraintTop_toBottomOf="@id/tvTaskContent" />

        <!-- 分隔点 -->
        <TextView
            android:id="@+id/tvDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="·"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/tvTimeInfo"
            app:layout_constraintTop_toBottomOf="@id/tvTaskContent" />

        <!-- 重复类型 -->
        <TextView
            android:id="@+id/tvRepeatType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="每天"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/tvDot"
            app:layout_constraintTop_toBottomOf="@id/tvTaskContent" />

        <!-- 执行次数 -->
        <TextView
            android:id="@+id/tvExecuteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="已执行 5 次"
            android:textColor="@color/text_hint"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/ivTypeIcon"
            app:layout_constraintTop_toBottomOf="@id/tvTimeInfo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
