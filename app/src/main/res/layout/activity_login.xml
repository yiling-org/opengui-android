<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".LoginActivity">

    <!-- Logo Glow Effect - 与首页保持一致的尺寸 -->
    <View
        android:id="@+id/logoGlow"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/logo_glow_circle"
        android:alpha="0.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Logo Icon - 与首页AIStatusIndicator保持一致的尺寸 -->
    <ImageView
        android:id="@+id/logoIcon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="Logo"
        app:layout_constraintEnd_toEndOf="@id/logoGlow"
        app:layout_constraintStart_toStartOf="@id/logoGlow"
        app:layout_constraintTop_toTopOf="@id/logoGlow"
        app:layout_constraintBottom_toBottomOf="@id/logoGlow" />

    <!-- Title - 与首页保持一致的样式 -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/app_name"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="normal"
        android:fontFamily="sans-serif-light"
        android:letterSpacing="0.05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoGlow" />

    <!-- Slogan - 与首页保持一致，紧跟标题下方 -->
    <TextView
        android:id="@+id/sloganText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="君子动口，吾自躬行"
        android:textColor="@color/text_tertiary"
        android:textSize="10sp"
        android:letterSpacing="0.1"
        android:alpha="0.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText" />

    <!-- Login Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/loginCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="28dp"
        app:cardBackgroundColor="#252D45"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sloganText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Welcome Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome back"
                android:textColor="@color/accent_gold"
                android:textSize="13sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:textAllCaps="true"
                android:layout_marginBottom="20dp" />

            <!-- Username Input -->
            <EditText
                android:id="@+id/usernameInput"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/input_field_background"
                android:hint="Username"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="#7a8aa8"
                android:textSize="16sp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:imeOptions="actionNext"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="12dp"
                android:drawableTint="#7a8aa8" />

            <!-- Password Input -->
            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/input_field_background"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="#7a8aa8"
                android:textSize="16sp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:imeOptions="actionNext"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="12dp"
                android:drawableTint="#7a8aa8" />

            <!-- Access Code Input -->
            <EditText
                android:id="@+id/accessCodeInput"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/input_field_background"
                android:hint="准入码"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="#7a8aa8"
                android:textSize="16sp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:imeOptions="actionDone"
                android:drawableStart="@drawable/ic_key"
                android:drawablePadding="12dp"
                android:drawableTint="#7a8aa8" />

            <!-- Access Code Hint -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="请输入您在官网申请的小零准入码"
                android:textColor="#7a8aa8"
                android:textSize="12sp"
                android:paddingStart="4dp" />

            <!-- Error Text -->
            <TextView
                android:id="@+id/errorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/error"
                android:textSize="13sp"
                android:textAlignment="center"
                android:visibility="gone" />

            <!-- Login Button -->
            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/btn_gradient_gold"
                android:text="Sign In"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:letterSpacing="0.05"
                android:elevation="6dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Register Link -->
    <LinearLayout
        android:id="@+id/registerLinkLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginCard">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? "
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/registerLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@color/accent_gold"
            android:textSize="14sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp" />

    </LinearLayout>

    <!-- Version Info -->
    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="v1.0.0"
        android:textColor="@color/text_tertiary"
        android:textSize="11sp"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:id="@+id/loadingProgress"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/accent_gold" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
